body {
  font-family: "Yu Mincho", "YuMincho";
}

.navbar .container {
  max-width: 1400px;
}

.bg-footer-gray {
  background-color: #7f7f7f;
}

.footer-menu p {
  text-align: left;
  color: #fff;
  font-size: 18px;
  margin-bottom: 0px;
  padding: 1px;
}

.footer-menu p.text-orange-color {
  color: #cd5c5c;
}

.font-size-20 {
  font-size: 20px;
}

.font-size-24 {
  font-size: 24px;
}

.margin-bottom-24 {
  margin-bottom: 24px;
}

.margin-bottom-48 {
  margin-bottom: 48px;
}

.description-text {
  position: absolute;
  bottom: 30px;
  right: 30px;
  text-align: right;
  font-weight: 500;
}

.description-text p {
  color: #fff;
  font-size: 41px;
}

.img-title-heading {
  width: 80px;
}

.our-history-title {
  height: 80px;
  line-height: 80px;
}

.none-list-style {
  list-style-type: none;
}

.bg-orange-gray {
  background-color: #FEF4EC;
}

.color-primary {
  background: #E46C0A;
  border-color: #E46C0A;
  padding: 15px;
}

.color-primary:hover {
  background-color: #e46c0a;
  color: #fff;
  border-color: #e46c0a;
}

.btn-primary {
  width: 147px;
}

.border-line-heading {
  border-bottom: 5px solid #f7ad73;
  padding: 0px 5px;
  font-size: 32px;
}

.img-fluid {
  max-width: 100%;
  height: 100%;
}

.font-weight-800 {
  font-weight: 800;
}

.font-20 {
  font-size: 2rem;
}

.font-18 {
  font-size: 1.5rem;
}

.bg-orange-gray-100 {
  background-color: #FEF9F4;
  border: 1px solid #eb7d4e;
}

.border-line-2 {
  border: 1px solid #cdcdcd;
}

.float-right {
  float: right;
}

.display-inline-block {
  display: inline-flex;
  width: 100%;
}

.row-coll-3 {
  padding-left: 15px;
}

